@model BancoApp.Models.Entity.Cuenta
@{
    ViewData["Title"] = "Registrar Cuenta";
}
<div class="container">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Cuenta" asp-action="Create" method="post">
                <div class="form-group">
                    <label for="Nombre del producto" class="control-label"> <b>Nombre del titular: </b> </label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
               
                  <div>
                    <p>        </p>
                </div>
               <div class="form-group">
                    <label for="Descripcion del producto" class="control-label"> <b>Tipo de Cuenta: </b> </label>
                    <input asp-for="TipoC" class="form-control" />
                    <span asp-validation-for="TipoC" class="text-danger"></span>
                </div>
               
                <div>
                    <p>        </p>
                </div>

                <div class="form-group">
                    <label for="Precio del producto" class="control-label"> <b>Saldo Inicial: </b></label>
                    <input asp-for="SaldoI" type="number" class="form-control"/>
                    <span asp-validation-for="SaldoI" class="text-danger"></span>
                </div>

                <div>
                    <p>        </p>
                </div>

                 <div class="form-group">
                    <label for="Email" class="control-label"> <b>Email </b> </label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Registrar Cuenta</button>
                </div>



            </form>
             <h1>@ViewData["Message"]</h1>
    <div>
        <a asp-action="Index"><---Regresar</a>
    </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}